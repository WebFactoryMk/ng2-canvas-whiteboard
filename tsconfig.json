{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"dom"
		],
		"skipLibCheck": true
	},
	    "include": [
        "src/**/*"
    ],

  "exclude": [
    "build",
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "../aot",
    "skipMetadataEmit": false
  }
}